<project name="Generate a bdjo file" basedir=".">

<target name="generate-bdjo">
	
	<available file="${HDC_BDJO_CONVERTER}/dist/bdjo.jar" type="file"
	    property="bdjoconverter.ok"/>
	
	<fail unless="bdjoconverter.ok" message="Coud not find the bdjoconverter tool at ${HDC_BDJO_CONVERTER}"/>
	
	<java classpath="${HDC_BDJO_CONVERTER}/dist/bdjo.jar"  
	      fork="true"
	      classname="com.hdcookbook.tools.bdjo.Converter">
		<arg line="${HDC_REPOSITORY}/grin/src/com/hdcookbook/bookmenu/bdjo/main_bdjo.xml 
			${HDC_DISC_BDMV}/BDJO/00001.bdjo"/>
	</java>	
</target>	

</project>